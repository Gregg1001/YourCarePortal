            const buttonMargin = 5; // Margin between buttons in responsive mode
            var totalHeight1 = 72;

            const isPhoneMode = window.innerWidth <= 768; // Example breakpoint for phone mode
            let buttonsHeight;

            if (isPhoneMode) {
                // Calculate total height if buttons are stacked vertically
