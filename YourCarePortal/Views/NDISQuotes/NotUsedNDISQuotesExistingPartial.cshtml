                    <div class="ndis-quote-header">Start Date</div>
                    <div class="ndis-quote-header">End Date</div>
                    <div class="ndis-quote-header">Amount</div>
                    <div class="ndis-quote-header">Locked</div>
                    <div class="ndis-quote-header">Create Date</div>
                    <div class="ndis-quote-header">Modify Date</div>
                    <div class="ndis-quote-header">Status</div>
@* 
                    @foreach (var quote in Model.NDISQuotes.Lines)
                    {
                        <div>@quote.Id</div>
                        <div>@quote.QhClientName</div>
                        <div>@quote.QhRateIdx</div>
                        <div>@quote.QhStart</div>
                        <div>@quote.QhEnd</div>
                        <div>@quote.QhAmount</div>
