@using System.Globalization
@model YourCarePortal.Models.NDISQuotesandClients;

@if (Model == null)
{
    <div class="centered-content">
        <h1>This client does not currently have any budget at this time.</h1>
        <p>@ViewBag.NoDataSubText</p>
    </div>
}
else
{
